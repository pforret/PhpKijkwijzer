{
    "name": "pforret/PhpKijkwijzer",
    "version": "1.1.1",
    "description": "PHP Component to retrieve Kijkwijzer ratings for movies",
    "keywords": [
        "pforret",
        "PhpKijkwijzer"
    ],
    "homepage": "https://github.com/pforret/PhpKijkwijzer",
    "license": "MIT",
    "authors": [
        {
            "name": "pforret",
            "email": "peter@forret.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Pforret\\PhpKijkwijzer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pforret\\PhpKijkwijzer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
